{
  "name": "candy-game",
  "version": "1.0.0",
  "description": "Candy Game - Match-3 game with mobile-first design (white-label clone)",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build && npm run server:build",
    "preview": "vite preview",
    "server:dev": "tsx watch server/index.ts",
    "server:build": "tsc -p tsconfig.server.json",
    "server:start": "node dist/server/index.js",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:production-seed": "node scripts/migrate-add-seed-to-game-sessions.js"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "lucide-react": "^0.344.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.1",
    "express": "^4.21.2",
    "drizzle-orm": "^0.39.1",
    "postgres": "^3.4.3",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^7.5.0",
    "cors": "^2.8.5",
    "winston": "^3.11.0",
    "zod": "^3.24.2",
    "xlsx": "^0.18.5",
    "dotenv": "^17.2.3",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.15",
    "typescript": "~5.6.2",
    "vite": "^5.4.10",
    "drizzle-kit": "^0.30.4",
    "@types/express": "^4.17.21",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.16.11",
    "@types/node-cron": "^3.0.11",
    "@types/cors": "^2.8.17",
    "tsx": "^4.20.6"
  }
}
